{
	"compilerOptions": {
		"target": "ES2017",
		"module": "esnext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"moduleResolution": "bundler",
		"paths": {
			"@/*": ["./src/*"],
			"@test/*": ["./test/*"],
            "@mkblog/core": ["../core/src/index.ts"]
		}
	},
	"include": ["src"]
}
